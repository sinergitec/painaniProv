<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InicioOpeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvComision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué porcentaje deseas aportar hoy?"
            android:textAlignment="center"


            android:gravity="center_horizontal" />

        <RadioGroup
            android:id="@+id/rb"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:gravity="center"
            >
        </RadioGroup>




        <EditText
            android:id="@+id/etOtraComision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="26dp"


            />


        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Inicio de Dia"

            app:layout_constraintTop_toBottomOf="@+id/etOtraComision" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>